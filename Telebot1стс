        btn2 = types.InlineKeyboardButton(text="It's simple bot where you can find quotes for your heart.")
        key.add(btn1)
        key.add(btn2)
        bot.edit_message_reply_markup(chat_id=call.message.chat.id, message_id=call.message.id, reply_markup=key)



