import telebot
from telebot import types

bot = telebot.TeleBot("6002000438:AAHVeKOKhbsKPyNT_617VOUwvQ6L9ysUUcw")

@bot.message_handler(commands=['start'])
def start(msg: types.Message):
    key = types.InlineKeyboardMarkup()
    btn1 = types.InlineKeyboardButton("Bot's Options", callback_data="bot_option")
    key.add(btn1)
    bot.send_message(chat_id=msg.chat.id, text="Click the button to see more:", reply_markup=key)

@bot.callback_query_handler(func=lambda call: call.data == 'bot_option')
def bot_option(call: types.CallbackQuery):
    key = types.InlineKeyboardMarkup()
    btn1 = types.InlineKeyboardButton("ğŸ“– Quotes", callback_data="quotes")
    btn2 = types.InlineKeyboardButton("â“ Help", callback_data="help")
    btn3 = types.InlineKeyboardButton("ğŸ“œ About Bot", callback_data="about")
    key.add(btn1)
    key.add(btn2)
    key.add(btn3)
    text = "Hi \nI'm the bot where you can find Quotes for your heart!\nClick the ğŸ“– Quotes button.\nGood luck to find Quotes."
    bot.edit_message_text(chat_id=call.message.chat.id, message_id=call.message.id, text=text, reply_markup=key)

