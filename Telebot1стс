def help(call):
    if call.data == "help":
        key = types.InlineKeyboardMarkup()
        btn1 = types.InlineKeyboardButton(text='Cho zdes ne ponatno Blet!\nClick on ğŸ“– Quotes button')
        btn2 = types.InlineKeyboardButton(text='Back to the main', callback_data='back_2')
        key.add(btn1)
        key.add(btn2)
        bot.edit_message_reply_markup(chat_id=call.message.chat.id, message_id=call.message.id, reply_markup=key)

def about(call):
    if call.data == "about":
        key = types.InlineKeyboardMarkup()
