import telebot
from telebot import types 

API = "6238394380:AAG3WwGvOBnWVoNj3b7YBM28I7yxORjzpAo"
bot = telebot.TeleBot(API) 

@bot.message_handler(commands=['start'])
def start_message(message): 
    if message.text == "start": 
       bot.send_message(message.chat.id, "Pruvet! Choose what character's photo you need") 
    else: 
       bot.send_message(message.chat.id, "Print help)
 
@bot.message_handler(commands=['help'])
def start_message_2(message): 
    bot.send_message(message.chat.id, "Click on menu -> character") 

@bot.message_handler(commands=['button'])
def button_message(message): 
    markup=types.ReplyKeyboardMarkup(resize_keyboard=True) 
    item1=types.KeyboardButton('Naruto') 
    item2=types.KeyboardButton('Saske') 
    item3=types.KeyboardButton('Sakura') 
    markup.add(item1,item2,item3) 
    bot.send_message(message.chat.id,'Choose character',reply_markup=markup) 

@bot.message_handler(content_types='text')
def reply_message(message): 
    if message.text == "Naruto": 
       bot.send_photo(message.chat.id, "https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcTOsnhN_KjILWoGoIDuAZ7Owh_LVaSZSlcZHQ&usqp=CAU")
    elif message.text == "Saske": 
       bot.send_photo(message.chat.id, "https://i.pinimg.com/originals/54/d3/64/54d36481be40ec2d5bc4bb8348d58aef.png") 
    elif message.text == "Sakura": 
       bot.send_photo(message.chat.id, "https://e0.pxfuel.com/wallpapers/1019/878/desktop-wallpaper-sakura-haruno-anime-x-reality-naruto-anime-aesthetic-anime-anime-naruto-shippuden-thumbnail.jpg")
 
bot.infinity_polling()
